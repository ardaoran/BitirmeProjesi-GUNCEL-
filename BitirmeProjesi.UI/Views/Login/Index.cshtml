
@model UserSignInViewModel

<section class="">
    <!-- Jumbotron -->
    <div class="px-4 py-5 px-md-5 text-center text-lg-start" style="background-color: #ffff">
        <div class="container">
            <div class="row gx-lg-5 align-items-center">
                <div class="col-lg-6 mb-5 mb-lg-0">
                    <h1 class="my-5 display-3 fw-bold ls-tight">
                        Motolektro <br />
                        <span class="text-primary">Temiz Dünya</span>
                    </h1>
                    <p style="color: hsl(217, 10%, 50.8%)">
                        Motolektro'ya hoş geldiniz, elektrikle hareket eden geleceğin araçlarına dair en güvenilir ve yenilikçi e-ticaret platformuna adım attınız! Giriş Yapın , elektrikli araç dünyasının heyecanını bizimle keşfetmeye devam edin.
                    </p>
                </div>

                <div class="col-lg-6 mb-5 mb-lg-0">
                    <div class="card">
                        <div class="card-body py-5 px-md-5">
                            <form asp-action="Index">
                                <!-- 2 column grid layout with text inputs for the first and last names -->
                                <div class="row">
                           
                                    <div class="form-outline mb-4">
                                        <div class="form-outline">
                                           
                                            <input asp-for="@Model.username" type="text" id="form3Example1" class="form-control" />
                                            <label class="form-label" for="form3Example1">Kullanıcı Adı</label>
                                        </div>
                                    </div>

                                    <!-- Password input -->
                                    <div class="form-outline mb-4">
                                        
                                        <input asp-for="@Model.password" type="password" id="form3Example4" class="form-control" />
                                        <label class="form-label" for="form3Example4">Şifre</label>
                                    </div>

                                   

                                    <!-- Checkbox -->
                                    <!-- Submit button -->
                                    <button type="submit" class="btn btn-primary btn-block mb-4">
                                        Giriş Yap
                                    </button>
                                </div>
                               

                               


                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Jumbotron -->
</section>
<!-- Section: Design Block -->